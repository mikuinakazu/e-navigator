= render 'layouts/header'
.wrapper
  %h1 プロフィールの作成
  .profile_form
    =form_for @profile do |f|
      %p Email address
      = @user_email
      %p 名前
      =f.text_field :name, require: true
      %p 年齢
      =f.date_select :birth_date, require: true, use_month_numbers: true
      %p 性別
      =f.select :sex, Profile.sexes.keys.to_a
      %p 学校名
      =f.text_field :school, require: true
      =f.submit '登録する'

