= render 'layouts/header'
.interview_wrapper
  %h1 #{@user.profile.name}さんの面接一覧
  %table.table
    %thead
      %tr
        %th 面接開始時間
        %th 承認状態
        %th(colspan='2')
    %tbody
    - @interviews.each do |interview|
      %tr
        %td
          = interview.interview_date
        %td 保留
        %td
          =link_to '編集', edit_interview_path(interview.id)
        %td
          =link_to '削除', interview_path(interview.id), method: :delete
  =link_to '新規面接作成', new_interview_path, class: 'btn'
